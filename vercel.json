{
    "version": 2,
    "builds": [
        {
            "src": "my_site/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9", // Specify the Python runtime version you need
                "maxLambdaSize": "15mb" // Adjust the lambda size if necessary
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "my_site/wsgi.py" // Entry point for your Django API
        }
    ]
}
