{
    "version": 2,
    "builds": [
        {
            "src": "my_site/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9", // Choose a supported Python runtime (e.g., python3.9)
                "maxLambdaSize": "15mb"
            }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles_build"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "my_site/wsgi.py"
        }
    ]
}
